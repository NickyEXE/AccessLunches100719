<div class="show">
    <h1><%= link_to @restaurant.name, @restaurant.url %></h1>
    
    <img src=<%= @restaurant.image_url %> alt=<%= @restaurant.name %>/><br/>
    
    Categories: <%= @restaurant.kind_of_food %>
    
    <%= form_for @review do |f|  %>
        <label>Rating</label><br/>
        <%= f.number_field :rating, min: 1, max: 10 %><br/>
        <label>Content</label><br/>
        <%=f.text_area :content %><br/>
        <%= f.hidden_field :restaurant_id, value: @restaurant.id %>
        <%= f.submit %>
    <% end %>

    Average Rating: <%= @restaurant.average_rating %>
    <div class="reviews">
    <% @reviews.each do |review| %>
        <div class="review"><span class="username"><%= review.user.username %></span>: <%= review.content %></div>
    </div>
    <% end%>
</div>