<div class="show">
<h1><%= @restaurant.name %></h1>
<%= image_tag @restaurant.image_url %>
<p><%= "⭐️ " * @restaurant.average_rating %></p>
<p><%= @restaurant.kind_of_food %></p>
<p><%= @restaurant.address %></p>

<%= form_for @review do |f| %>
    <%= f.label :rating %>
    <%= f.number_field :rating, min: 1, max: 10 %>
    <br/>
    <%= f.text_area :content %>
    <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
    <br/>
    <%= f.submit%>
<% end%>

<div class="reviews">
    <% @restaurant.reviews.each do |review|%>
    <div class="review">
    <%= review.user.username %>: <%= "⭐️ " * review.rating %>
    <p><%= review.content %></p>
    </div>
    <% end%>
</div>

</div>
