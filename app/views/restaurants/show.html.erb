<div class="show">

  <%= link_to "See All Restaurants", restaurants_path %>
  <h1><%= @restaurant.name %></h1>
  <%= image_tag @restaurant.image_url %>
  <p><%= star_rating(@restaurant.average_review) %></p>
  <p><%= @restaurant.kind_of_food %></p>
  <p><%= @restaurant.address %></p>

    <iframe
    width="600"
    height="450"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/place?key=<%= ENV['GOOGLE_KEY'] %>
      &q=<%= @restaurant.name %>, New York, NY" allowfullscreen>
  </iframe>

  <div class="reviews">
    <%= form_for @review  do |f| %>
      <%= f.label :rating %><br>
      <%= f.number_field :rating, in:(1..5) %><br>
      <%= f.label :content %><br>
      <%= f.text_area :content %><br>
      <%= f.hidden_field :restaurant_id, value: @restaurant.id %>
      <%= f.submit "Post Review!" %>
    <% end %>
    <% @restaurant.reviews.each do |review| %>
      <div class="review">
        <p><%= user_rating(review) %></p>
        <p><%= review.content %></p>
      </div>
    <% end %>
  </div>
</div>
