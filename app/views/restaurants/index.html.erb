<div class="reviews">
    <%= form_for @review do |f| %>
    <%= f.label :rating %>
    <%= f.number_field :rating, in: 1..10 %>
    <br/>
    <%= f.text_area :content %>
    <br/>
    <%= f.collection_select :restaurant_id, @restaurants, :id, "batman" %>
    <%= f.submit %>
    <% end%>
</div>

<div class="cards">
    <% @restaurants.each do |restaurant| %>
        <div class="card">
            <%= link_to restaurant.name, restaurant %>
            <br/>
            <%= image_tag restaurant.image_url %>
        </div>
    <% end%>
</div>